<h1>Dashboard</h1>
<div class="container">
  <div class="row">
    <p>Total Product Inventory: <%=@product_count %></p>
    <p>Manage Product Inventory: <%= link_to "All Products", "admin/products" %>
  </div>
  <div class="row">
    <p>Number of Categories: <%=@category_count %></p>
    <% @categories.each do |category| %>
      <li><%= link_to category.name, category %></li>
    <% end %>
  </div>
</div> 
